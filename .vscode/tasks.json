{
    
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SC Debug",
            "type": "shell",
            "command": "make -j4",
            "options": {
                "cwd": "${workspaceFolder}/SC"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build SC Release",
            "type": "shell",
            "command": "make clean && make TYPE=1 -j4",
            "options": {
                "cwd": "${workspaceFolder}/SC"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "Clean Project"
        },
        {
            "label": "Build SandBox",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/SandBox"
            },
            "dependsOn": "Build SC Debug",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build SandBox Release",
            "type": "shell",
            "command": "make",
            "args": [
                "TYPE=1"
            ],
            "options": {
                "cwd": "${workspaceFolder}/SandBox"
            },
            "dependsOn": "Build SC Release",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run SandBox",
            "command": "${workspaceFolder}/SandBox/bin/SandBox",
            "dependsOn": "Build SandBox",
            "options": {
                "cwd": "${workspaceFolder}/SandBox/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean SandBox",
            "command": "make clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/SandBox"
            },
            "dependsOn": "Clean SC",
            "problemMatcher": []
        },
        {
            "label": "Clean SC",
            "command": "make clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/SC"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Project",
            "dependsOn": "Clean Script Core",
            "problemMatcher": []
        },
        {
            "label": "Compile SCImGui",
            "command": "clang++ -Iinclude -I../external/imgui -Llib -limgui src/Internal/UI/ImGui.cpp -o libSCImGui.dylib -shared -fPIC -DSC_EDITOR_IMPL -I../ext/include/glm -std=c++20 -lglfw -I../ext/include/imgui -Wall -DGLFW_INCLUDE_NONE -DSC_WINDOW_API_GLFW -DSC_RENDERER_OpenGL && cp libSCImGui.dylib ../SCEditor/libSCImGui.dylib && cp libSCImGui.dylib ../SCEditor/bin/libSCImGui.dylib",
            "problemMatcher": "$gcc",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/SC"
            }
        },
        {
            "label": "Build SCEditor",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/SCEditor"
            },
            "problemMatcher": "$gcc",
            "dependsOn": "Build SC Debug"
        },
        {
            "label": "Clean SCEditor",
            "command": "make clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/SCEditor"
            },
            "dependsOn": "Clean SandBox"
        },
        {
            "label": "Compile Script Core",
            "command": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/SC-ScriptCore"
            },
            "dependsOn": "Build SCEditor"
        },
        {
            "label": "Clean Script Core",
            "command": "make clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/SC-ScriptCore"
            },
            "dependsOn": "Clean SCEditor"
        },
        {
            "label": "Build Project Debug",
            "dependsOn": "Compile Script Core",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Remake compile_commands.json",
            "command": "make clean && bear -- make -j4 && mv compile_commands.json ../compile_commands.json",
            "options": {
                "cwd": "${workspaceFolder}/SC"
            },
            "type": "shell",
            "problemMatcher": []
        }
    ],
}