{
	
    "files.exclude": {
        "**/.cache": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.o": true
    },
    "[cpp]": {
        "editor.insertSpaces": false,
        "editor.wordBasedSuggestions": false,
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    },
    "[glsl]": {
        "editor.insertSpaces": false,
        "editor.autoSurround": "languageDefined",
        "editor.autoClosingBrackets": "always"
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.autoClosingBrackets": "always",
        "editor.autoClosingQuotes": "always",
        "editor.autoClosingDelete": "always",
    },
    "C_Cpp.intelliSenseEngine": "disabled",
    "cSpell.words": [
        "Dloadproc",
        "dvec",
        "fvec",
        "LoadedScenes",
        "Wwindow",
        "framebuffer",
        "SCMS",
        "scrd",
        "ucid"
    ],
    "files.associations": {
            "*.scrd": "yaml",
            "*.scs": "yaml",
            "future": "cpp",
            "array": "cpp",
            "__tuple": "cpp",
            "vector": "cpp",
            "__hash_table": "cpp",
            "__threading_support": "cpp",
            "__tree": "cpp",
            "atomic": "cpp",
            "bitset": "cpp",
            "chrono": "cpp",
            "map": "cpp",
            "memory": "cpp",
            "numeric": "cpp",
            "optional": "cpp",
            "random": "cpp",
            "string": "cpp",
            "string_view": "cpp",
            "system_error": "cpp",
            "thread": "cpp",
            "unordered_map": "cpp",
            "variant": "cpp",
            "__functional_03": "cpp",
            "__functional_base": "cpp",
            "algorithm": "cpp",
            "functional": "cpp",
            "utility": "cpp"
    },
	"omnisharp.useModernNet": false,
	"omnisharp.projectLoadTimeout": 120,   
}